<!DOCTYPE html>
<html>
  <head>
    <%- include('head'); -%>




  </head>

  <body>
    <div class = "background">
      <img  width="100%"  height="100%" opacity= "0.5" src= 'https://www.stlawu.edu/sites/default/files/news-images/Sullivan-Student-Center.jpg'>
    </div>

      <h2 class ="title">SLU Clubs and Theme Houses</h2>
      <div class="logIn">
        <form id="signinForm">
          <label for="text">Username: </label>
          <input positive: relative type="text" id = "curID" name="id">
          <button type="submit" id= "signin">Sign In</button>
          <button type="submit" id= "signup">Sign Up</button>




      </div>


      <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
      <script>

      $('#signin').on('click', function(event) {
        event.preventDefault();
        const form = $(this).closest('form');

          $.ajax({method: 'post', url: '/login', data: form.serialize()})
           .done(() => window.location.replace("/clubs"))
           .fail(error => alert('Could not log in.'));
      });
      $('#signup').on('click', function(event) {
        const form = $(this).closest('form');
        event.preventDefault();
        $.ajax({method: 'post', url: '/users', data: form.serialize()})
          .done(() => window.location.replace('/'))
          .fail(error => alert("Fail to signup."));
      });
