<!DOCTYPE html>
<html>
  <head>
    <%- include('head'); -%>
    <style>
      .logIn{
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%);
      }
      .title{
        position: absolute;
        left: 50%;
        top: 25%;
        transform: translate(-50%,-50%);
      }
    </style>
  </head>

  <body>
      <div style="background-image": "'url('https://www.stlawu.edu/news/st-lawrence-goes-us-news-rankings')'}">
      </div>
      <h2 class ="title">SLU Clubs and Theme Houses</h2>
      <div class="logIn">
        <form id="signinForm">
          <label for="text">Username: </label>
          <input positive: relative type="text" id = "curID" name="id">
          <button type="submit" id= "signin">Sign In</button>
          <button name = "btn-signup" id= "signup">Sign Up</button>

        </form>




      </div>


      <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
      <script>

      $('#signin').on('click', function(event) {
        event.preventDefault();
        const input = $(this);
        //const currentID = $('#curID').val();
          $.ajax({method: 'post', url: '/login', data: input.serialize()})
           .done(() => window.location.replace("/clubs"))
           .fail(error => alert('Could not log in.'));
      });












