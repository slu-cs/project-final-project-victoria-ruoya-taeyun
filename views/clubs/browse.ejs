<form id="clubsinfo">

  <h2><%= club._id -%></h2>
  <p><%= club.introduction -%></p>
  <p><a>Meeting Time:  </a><%= club.meetingTime -%></p>
  <p><a>Meeting Location:  </a><%= club.meetingLocation -%></p>
  <p id="mem"><a>Membership:  </a><%= club.memberList.length +club.officerList.length -%></p>
  <p><a>Coming Event:  </a><%= club.comingEvent -%></p>
  <p><a>Past Event:  </a><%= club.pastEvent -%></p>

  <%_ if (club.memberList.indexOf(user._id) < 0) { -%>
      <button id="join" class="btn btn-primary">Join</button>
  <%_}else{-%>
    <button id="leave" class="btn btn-primary">Leave</button>
  <%_}-%>

</form>
