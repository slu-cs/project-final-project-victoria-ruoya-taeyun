<script>

  $('#clubsinfo').on('click', function(event) {
    const div = $(this);
    event.preventDefault();


    <%_ if (club.memberList.indexOf(user._id) < 0) { -%>

      <%_ club.memberList.push(user._id); -%>
      <%_ newMemberList = Object.entries(club.memberList)-%>




      $.ajax({method: 'put', url: '/clubs/<%= club._id -%>', data: div.serialize()})

        .done(() => alert('Join in successfully.'))
        .fail(error => alert('Fail to join in this club.'));
      <%_ } else {-%>
     .fail(error => alert('You are already in the club.'));
   <%_ }-%>

   });





</script>
