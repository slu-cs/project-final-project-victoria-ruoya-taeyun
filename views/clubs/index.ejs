<!DOCTYPE html>
<html>
  <%- include('../head'); -%>
  <body>
    <%- include('../navbar', {active: 'clubs'}); -%>
    <div class="container-fluid">
      <div class="row">
        <div class="col-auto p-3 border-right">
          <nav class="nav nav-pills flex-column">
            <%_ for (const id of clubIDs) { -%>
              <%_ const status = (id === club.id) ? 'active bg-dark' : 'inactive'; -%>
              <a href="/clubs/<%= id -%>" class="nav-item nav-link <%= status -%>"><%= id -%></a>
            <%_ } -%>
          </nav>
        </div>
        <div class="col">
          <main class="p-3">
            <h2><%= club.category -%></h2>
            <p><%= club.introduction -%></p>
            <%_ if (club.memberList.length > 0) { -%>
              <p>Members:</p>
              <ul>
                <%_ for (const member of club.memberList) { -%>
                  <li><a href="/clubs/<%= memberList -%>"><%= memberList -%></a></li>
                <%_ } -%>
              </ul>
            <%_ } -%>
          </main>
        </div>
      </div>
    </div>
  </body>
</html>
