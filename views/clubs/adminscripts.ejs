<script>

 // Update a club
 $('#update').on('submit', function(event) {
   const form = $(this);
   event.preventDefault();
   $.ajax({method: 'put', url: '/clubs/<%= club._id -%>', data: form.serialize()})
     .fail(error => alert('Fail to update the club.'));
 });

